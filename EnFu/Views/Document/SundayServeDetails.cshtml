@model EnFu.Models.SundayServeListViewModel
<h2>服侍 (@Model.SundayServeList.FirstOrDefault().SundayServeDateTime.ToString("yyyy-MM-dd"))</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
<div class="form-horizontal">
    <hr />
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="保存服侍" class="btn btn-success" />
        </div>
    </div>
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @if (Model != null && Model.SundayServeList != null && Model.SundayServeList.Count > 0)
    {
        for (int i = 0; i < Model.SundayServeList.Count; i++)
        {
            <div class="form-group">
                <div class="col-md-2 text-right">
                    @Model.SundayServeList[i].SundayServeDutyName
                </div>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.SundayServeList[i].SundayServeName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.SundayServeList[i].SundayServeName, "", new { @class = "text-danger" })
                </div>
            </div>
            @Html.HiddenFor(model => model.SundayServeList[i].SundayServeId)
            @Html.HiddenFor(model => model.SundayServeList[i].SundayServeDutyName)
            @Html.HiddenFor(model => model.SundayServeList[i].SundayServeDateTime)
        }
    }
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="保存服侍" class="btn btn-success" />
        </div>
    </div>
</div>
}


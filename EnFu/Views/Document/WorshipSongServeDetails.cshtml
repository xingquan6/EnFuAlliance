@model EnFu.Models.WorshipSongServeListViewModel
<h2>崇拜歌曲 (@Model.WorshipSongServeList.FirstOrDefault().WorshipDate.ToString("yyyy-MM-dd"))</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <hr />
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="保存崇拜歌曲" class="btn btn-success" />
            </div>
        </div>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @if (Model != null && Model.WorshipSongServeList != null && Model.WorshipSongServeList.Count > 0)
        {
            for (int i = 0; i < Model.WorshipSongServeList.Count; i++)
            {
                <div class="form-group">
                    <div class="col-md-6">
                        <div class="col-md-2 text-right">
                            @(i+1)
                        </div>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.WorshipSongServeList[i].Name, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.WorshipSongServeList[i].Name, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="col-md-2 text-right">
                            Youtube:
                        </div>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.WorshipSongServeList[i].Url, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.WorshipSongServeList[i].Url, "", new { @class = "text-danger" })
                        </div>
                    </div>

                </div>
                @Html.HiddenFor(model => model.WorshipSongServeList[i].Id)
                @Html.HiddenFor(model => model.WorshipSongServeList[i].WorshipDate)
            }
        }
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="保存崇拜歌曲" class="btn btn-success" />
            </div>
        </div>
    </div>
}


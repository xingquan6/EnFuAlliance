@model EnFu.Models.SundayServeListViewModel
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.SundayServeSpeaker.SundayServeName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.SundayServeSpeaker.SundayServeName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.SundayServeSpeaker.SundayServeName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.SundayServeSpeaker.SundayServeDutyName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.SundayServeSpeaker.SundayServeDutyName,
                    new SelectList(EnFu.Modules.Enums.SundayReportConst.GetSundayServeDutyNameList()), new { htmlAttributes = new { @class = "dropdown-item" } })
                @Html.ValidationMessageFor(model => model.SundayServeSpeaker.SundayServeDutyName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.SundayServeSpeaker.SundayServeDateTime, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.SundayServeSpeaker.SundayServeDateTime, new { htmlAttributes = new { @class = "form-control", placeholder = "YYYY-MM-DD" } })
                @Html.ValidationMessageFor(model => model.SundayServeDateTime, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.SundayServeSpeaker.IsActive, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="checkbox" style="padding-left:20px;">
                    @Html.CheckBoxFor(model => model.SundayServeSpeaker.IsActive, htmlAttributes: new { @checked = true })
                    @Html.ValidationMessageFor(model => model.SundayServeSpeaker.IsActive, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
    </div>

                    <div class="sectionTitle">家事报告</div>
                </div>
                <div style="clear:both;height:500px;">
                    <ul>
                        @foreach (var item in Model.Events)
                        {
                            if (!string.IsNullOrWhiteSpace(item.EventName) && !string.IsNullOrWhiteSpace(item.EventDesc))
                            {
                                <li style="padding:2px;">
                                    <div style="font-weight:bolder;">
                                        [@item.EventName]
                                    </div>
                                    <div>
                                        @item.EventDesc
                                    </div>
                                </li>
                            }
                        }
                    </ul>
                </div>
            </div>
            <div class="section" id="section3">
                <div class="sectionTitleContainer">
                    <div class="blueLogoContainer"><div class="blueLogo"></div></div>
                    <div class="sectionTitle">代禱事項</div>
                </div>
                <div style="clear:both;">
                    <ul style="list-style:decimal;margin-left:16px;padding:0;">
                        @foreach (var item in Model.PrayEvents)
                        {
                            if (!string.IsNullOrWhiteSpace(item.PrayMatterDesc))
                            {
                                <li style="margin:0;padding:2px;">
                                    <div>
                                        @item.PrayMatterDesc
                                    </div>
                                </li>

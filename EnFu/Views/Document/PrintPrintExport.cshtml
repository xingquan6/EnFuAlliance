        </div>
        <div class="pageSection">
            <div class="section" id="section4">
                <div class="sectionTitleContainer">
                    <div class="blueLogoContainer"><div class="blueLogo"></div></div>
                    <div class="sectionTitle">
                        聚會时间表
                    </div>
                </div>
                <div style="clear:both;height:270px;">
                    <table class="tableChangeColor" style="font-size:12px;">
                        <tr>
                            <th style="width:28%;border-bottom:1px solid black;">聚会</th>
                            <th style="width:24%;border-bottom:1px solid black;">时间</th>
                            <th style="width:20%;border-bottom:1px solid black;">负责同工</th>
                            <th style="width:28%;border-bottom:1px solid black;">电话</th>
                        </tr>
                        @foreach (var item in Model.Teams)
                        {
                            <tr>
                                <td>@item.TeamName</td>
                                <td>@item.TeamDate</td>
                                <td>@item.TeamLeaderName</td>
                                <td>@item.TeamPhone</td>
                            </tr>
                        }
                    </table>
                </div>
                <div class="sectionTitleContainer">
                    <div class="blueLogoContainer"><div class="blueLogo"></div></div>
                    <div class="sectionTitle">
                        聚會人數 <span style="font-size:19px;">（@Model.Last2WeeksSundayDate-@Model.Last2WeeksSaturdayDate）</span>
                    </div>
                </div>
                <div style="clear:both;">
                    <table class="tableChangeColor" style="font-size:14px;">
                        <tr>
                            <td colspan="4">
                                主日崇拜（@Model.LastSundayDate）
                                成人 @Model.AdultGroupMeeting.GroupMeetingNumber
                                青少年 @Model.TeenGroupMeeting.GroupMeetingNumber
                                儿童 @Model.ChildrenGroupMeeting.GroupMeetingNumber
                                总共 @Model.LastSundayPeopleNumber 人
                            </td>
                        </tr>
                        <tr>
                            <td style="width:33%;text-align:left;">
                                @Model.PrayGroupMeeting.GroupMeetingType
                                <span>
                                    @if (Model.PrayGroupMeeting.GroupMeetingNumber > 0)
                                    {
                                        <span>@Model.PrayGroupMeeting.GroupMeetingNumber</span>
                                    }
                                    else
                                    {
                                        <span>-</span>
                                    }
                                </span>
                            </td>
                            <td style="width:33%;text-align:left;">
                                @Model.SundayPrayGroupMeeting.GroupMeetingType
                                <span>
                                    @if (Model.SundayPrayGroupMeeting.GroupMeetingNumber > 0)
                                    {
                                        <span>@Model.SundayPrayGroupMeeting.GroupMeetingNumber</span>
                                    }
                                    else
                                    {
                                        <span>-</span>
                                    }
                                </span>
                            </td>
                            <td style="width:33%;text-align:left;">
                                @Model.BibleReadingGroupMeeting.GroupMeetingType
                                <span>
                                    @if (Model.BibleReadingGroupMeeting.GroupMeetingNumber > 0)
                                    {
                                        <span>@Model.BibleReadingGroupMeeting.GroupMeetingNumber</span>
                                    }
                                    else
                                    {
                                        <span>-</span>
                                    }
                                </span>
                            </td>
                        </tr>
                        @{
                            for (int i = 0; i < Model.TeamGroupMeetings.Count; i++)
                            {
                                <tr>
                                    <td style="width:33%;text-align:left;">
                                        @if (i < Model.TeamGroupMeetings.Count)
                                        {
                                            <span>@Model.TeamGroupMeetings[i].GroupMeetingType</span>
                                            if (Model.TeamGroupMeetings[i].GroupMeetingNumber > 0)
                                            {
                                                <span>@Model.TeamGroupMeetings[i].GroupMeetingNumber </span>
                                            }
                                            else
                                            {
                                                <span>-</span>
                                            }
                                            i++;
                                        }
                                    </td>
                                    <td style="width:33%;text-align:left;">
                                        @if (i < Model.TeamGroupMeetings.Count)
                                        {
                                            <span>@Model.TeamGroupMeetings[i].GroupMeetingType</span>
                                            if (Model.TeamGroupMeetings[i].GroupMeetingNumber > 0)
                                            {
                                                <span>@Model.TeamGroupMeetings[i].GroupMeetingNumber </span>
                                            }
                                            else
                                            {
                                                <span>-</span>
                                            }
                                            i++;
                                        }
                                    </td>
                                    <td style="width:33%;text-align:left;">
                                        @if (i < Model.TeamGroupMeetings.Count)
                                        {
                                            <span>@Model.TeamGroupMeetings[i].GroupMeetingType</span>
                                            if (Model.TeamGroupMeetings[i].GroupMeetingNumber > 0)
                                            {
                                                <span>@Model.TeamGroupMeetings[i].GroupMeetingNumber </span>
                                            }
                                            else
                                            {
                                                <span>-</span>
                                            }
                                            i++;
                                        }
                                    </td>
                                </tr>
                                i--;
                            }
                        }

                    </table>
                </div>
                <div class="sectionTitleContainer" style="clear:both;margin-top:20px;">
                    <div class="blueLogoContainer"><div class="blueLogo"></div></div>
                    <div class="sectionTitle">
                        主日奉獻
                    </div>
                </div>
                <div style="clear:both;">
                    <table class="tableChangeColor" style="font-size:14px;">
                        <tr>
                            <td style="width:28%;"></td>
                            <td style="width:12%;">常费</td>
                            <td style="width:12%;">建堂</td>
                            <td style="width:12%;">差传</td>
                            <td style="width:12%;">欢欢</td>
                            <td style="width:12%;">感恩</td>
                            <td style="width:12%;">其他</td>
                        </tr>
                        <tr>
                            <td>@Model.LastSundayDate</td>
                            <td>
                                @if (Model.SundayDonate.RegularDonate > 0)
                                {<span>$@Model.SundayDonate.RegularDonate.ToString("F0")</span>}
                            </td>
                            <td>
                                @if (Model.SundayDonate.BuildChurchDonate > 0)
                                {<span>$@Model.SundayDonate.BuildChurchDonate.ToString("F0")</span>}
                            </td>
                            <td>
                                @if (Model.SundayDonate.SpreadDonate > 0)
                                {<span>$@Model.SundayDonate.SpreadDonate.ToString("F0")</span>}
                            </td>
                            <td>
                                @if (Model.SundayDonate.HuanHuanDonate > 0)
                                {<span>$@Model.SundayDonate.HuanHuanDonate.ToString("F0")</span>}
                            </td>
                            <td>
                                @if (Model.SundayDonate.ThankGivingDonate > 0)
                                {<span>$@Model.SundayDonate.ThankGivingDonate.ToString("F0")</span>}
                            </td>
                            <td>
                                @if (Model.SundayDonate.OtherDonate > 0)
                                {<span>$@Model.SundayDonate.OtherDonate.ToString("F0")</span>}
                            </td>
                        </tr>
                        <tr>
                            <td>@Model.LastSundayDate.Split(new[] { "月" }, StringSplitOptions.None)[0] 月累積</td>
                            <td>
                                @if (Model.MonthlyDonate.MonthlyRegularDonate > 0)
                                {<span>$@Model.MonthlyDonate.MonthlyRegularDonate.ToString("F0")</span>}
                            </td>
                            <td>
                                @if (Model.MonthlyDonate.MonthlyBuildChurchDonate > 0)
                                {<span>$@Model.MonthlyDonate.MonthlyBuildChurchDonate.ToString("F0")</span>}
                            </td>
                            <td>
                                @if (Model.MonthlyDonate.MonthlySpreadDonate > 0)
                                {<span>$@Model.MonthlyDonate.MonthlySpreadDonate.ToString("F0")</span>}
                            </td>
                            <td>
                                @if (Model.MonthlyDonate.MonthlyHuanHuanDonate > 0)
                                {<span>$@Model.MonthlyDonate.MonthlyHuanHuanDonate.ToString("F0")</span>}
                            </td>
                            <td>
                                @if (Model.MonthlyDonate.MonthlyThankGivingDonate > 0)
                                {<span>$@Model.MonthlyDonate.MonthlyThankGivingDonate.ToString("F0")</span>}
                            </td>
                            <td>
                                @if (Model.MonthlyDonate.MonthlyOtherDonate > 0)
                                {<span>$@Model.MonthlyDonate.MonthlyOtherDonate.ToString("F0")</span>}
                            </td>
                        </tr>
                    </table>
                </div>
                <div style="clear:both;margin-top:10px;">
                    <table class="tableChangeColor" style="font-size:18px;display:inline-block;float:right;width:50%;border:1px solid black;">
                        <tr>
                            <td style="width:30%;text-align:center;">@Model.LastSundayDate.Split(new[] { "月" }, StringSplitOptions.None)[0] 月总奉献</td>
                            <td style="width:10%;text-align:center;">$@Model.MonthDonate.ToString("#")</td>
                        </tr>
                        <tr>
                            <td style="width:30%;text-align:center;">每月總預算</td>
                            <td style="width:10%;text-align:center;">$@Model.MonthBudget.ToString("#.##")</td>
                        </tr>
                        <tr>
                            <td style="width:30%;text-align:center;">百分比</td>
                            <td style="width:10%;text-align:center;">@Model.MonthDonatePercentage.ToString("P0")</td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


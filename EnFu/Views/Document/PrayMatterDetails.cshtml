@model EnFu.Models.PrayMatterListViewModel
<h2>代祷事项 (@Model.PrayMatterList.FirstOrDefault().PrayMatterDate.ToString("yyyy-MM-dd"))</h2>
<p>如果没有内容，会复制上个星期的内容</p>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <hr />
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="保存代祷事项" class="btn btn-success" />
            </div>
        </div>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @if (Model != null && Model.PrayMatterList != null && Model.PrayMatterList.Count > 0)
        {
            for (int i = 0; i < 10; i++)
            {
                <div class="form-group">
                    <div class="col-md-2 text-right">
                        @(i + 1)
                    </div>
                    <div class="col-md-10">
                        @Html.TextAreaFor(model => model.PrayMatterList[i].PrayMatterDesc, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.PrayMatterList[i].PrayMatterDesc, "", new { @class = "text-danger" })
                    </div>
                </div>
                @Html.HiddenFor(model => model.PrayMatterList[i].PrayMatterId)
                @Html.HiddenFor(model => model.PrayMatterList[i].PrayMatterDate)
            }
        }
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="保存代祷事项" class="btn btn-success" />
            </div>
        </div>
    </div>
}


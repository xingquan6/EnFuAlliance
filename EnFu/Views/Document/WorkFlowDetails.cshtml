@model EnFu.Models.WorkFlowViewModel
<style>
    table {
        font-size: 1em;
    }

        table tr:nth-child(even) {
            background: #FFFFFF;
        }

        table tr:nth-child(odd) {
            background: #DCE6F2;
        }

        table tr td {
            text-align: center;
            border: 1px solid lightgray;
            padding: 10px;
        }

            table tr td:nth-child(2) {
                text-align: left;
            }

    input[type=checkbox] {
        -ms-transform: scale(1.5); /* IE */
        -moz-transform: scale(1.5); /* FF */
        -webkit-transform: scale(1.5); /* Safari and Chrome */
        -o-transform: scale(1.5); /* Opera */
        padding: 10px;
    }
</style>
@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()    
<div class="form-horizontal">
    <h2>主日崇拜流程 - @Model.SundayDate.ToString("yyyy-MM-dd")</h2>
    <hr />
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="保存主日崇拜流程" class="btn btn-success" />
        </div>
    </div>
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <table style="width:100%;" class="tblWorkFlow">
        <tr>
            <td style="font-size:1.5em;">宣召</td>
            <td>
                <div class="form-group" style="margin-top:10px;">
                    @Html.LabelFor(model => model.CallChaptor, htmlAttributes: new { @class = "control-label col-md-2" })
                    @Html.EditorFor(model => model.CallChaptor, new { @class = "form-check-input col-md-9" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.CallDetail, htmlAttributes: new { @class = "control-label col-md-2" })
                    @Html.TextAreaFor(model => model.CallDetail, new { @class = "form-check-input col-md-9" })
                </div>
            </td>
        </tr>
        <tr>
            <td style="font-size:1.5em;">圣餐</td>
            <td>
                <div class="col-md-4">
                    @Html.LabelFor(model => model.IsEucharist, htmlAttributes: new { @class = "control-label col-md-6" })
                    @Html.EditorFor(model => model.IsEucharist, new { @class = "form-check-input col-md-6" })
                </div>
                <div class="col-md-8">
                    @Html.LabelFor(model => model.EucharistOperator, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.EucharistOperator, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.EucharistOperator, "", new { @class = "text-danger" })
                    </div>
                </div>
            </td>
        </tr>
        <tr>
            <td style="font-size:1.5em;">读经</td>
            <td>
                <div class="col-md-12">
                    <div class="form-group">
                        @Html.LabelFor(model => model.BibleReading, htmlAttributes: new { @class = "control-label col-md-2" })
                        @Html.EditorFor(model => model.BibleReading, new { htmlAttributes = new { @class = "form-control col-md-9" } })
                    </div>
                </div>
            </td>
        </tr>
        <tr>
            <td style="font-size:1.5em;">讲道</td>
            <td>
                <div class="col-md-12">
                    <div class="form-group">
                        @Html.LabelFor(model => model.SermonTitle, htmlAttributes: new { @class = "control-label col-md-2" })
                        @Html.EditorFor(model => model.SermonTitle, new { htmlAttributes = new { @class = "form-control col-md-9" } })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.SermonDetails, htmlAttributes: new { @class = "control-label col-md-2" })
                    @Html.TextAreaFor(model => model.SermonDetails, new { @class = "form-check-input col-md-9" })
                </div>
                <div class="col-md-12">
                    <div class="form-group">
                        @Html.LabelFor(model => model.SermonSpeaker, htmlAttributes: new { @class = "control-label col-md-2" })
                        @Html.EditorFor(model => model.SermonSpeaker, new { htmlAttributes = new { @class = "form-control col-md-9" } })
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="form-group">
                        @Html.LabelFor(model => model.SermonSpeakerUrl, htmlAttributes: new { @class = "control-label col-md-2" })
                        @Html.EditorFor(model => model.SermonSpeakerUrl, new { htmlAttributes = new { @class = "form-control col-md-9" } })
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="form-group">
                        @Html.LabelFor(model => model.SermonAudioUrl, htmlAttributes: new { @class = "control-label col-md-2" })
                        @Html.EditorFor(model => model.SermonAudioUrl, new { htmlAttributes = new { @class = "form-control col-md-9" } })
                    </div>
                </div>
            </td>
        </tr>
        <tr>
            <td style="font-size:1.5em;">本周金句</td>
            <td>
                <div class="col-md-12">
                    <div class="form-group">
                        @Html.LabelFor(model => model.BibleWeeklyChaptor, htmlAttributes: new { @class = "control-label col-md-2" })
                        @Html.EditorFor(model => model.BibleWeeklyChaptor, new { htmlAttributes = new { @class = "form-control col-md-9" } })
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="form-group">
                        @Html.LabelFor(model => model.BibleWeeklyChaptorDetail, htmlAttributes: new { @class = "control-label col-md-2" })
                        @Html.TextAreaFor(model => model.BibleWeeklyChaptorDetail, new { htmlAttributes = new { @class = "form-control col-md-9" } })
                    </div>
                </div>
            </td>
        </tr>
        <tr>
            <td style="font-size:1.5em;">奉献</td>
            <td>
                <div class="col-md-12">
                    <div class="form-group">
                        @Html.LabelFor(model => model.DonationWeeklyChaptor, htmlAttributes: new { @class = "control-label col-md-2" })
                        @Html.EditorFor(model => model.DonationWeeklyChaptor, new { htmlAttributes = new { @class = "form-control col-md-9" } })
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="form-group">
                        @Html.LabelFor(model => model.DonationWeeklyChaptor, htmlAttributes: new { @class = "control-label col-md-2" })
                        @Html.TextAreaFor(model => model.DonationWeeklyChaptorDetail, new { htmlAttributes = new { @class = "form-control col-md-9" } })
                    </div>
                </div>
            </td>
        </tr>
        <tr>
            <td style="font-size:1.5em;">祝祷</td>
            <td>
                <div class="form-group">
                    @Html.LabelFor(model => model.Blessing, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Blessing, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Blessing, "", new { @class = "text-danger" })
                    </div>
                </div>
            </td>
        </tr>
        <tr>
            <td style="font-size:1.5em;">见证</td>
            <td>
                <div class="col-md-4">
                    @Html.LabelFor(model => model.Witness, htmlAttributes: new { @class = "control-label col-md-6" })
                    @Html.EditorFor(model => model.Witness, new { @class = "form-check-input col-md-6" })
                </div>
                <div class="col-md-8">
                </div>
            </td>
        </tr>
    </table>
    @Html.HiddenFor(model => model.WorkFlowId)
    @Html.HiddenFor(model => model.SundayDate)
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="保存主日崇拜流程" class="btn btn-success" />
        </div>
    </div>
</div>
}

